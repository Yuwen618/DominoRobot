<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Start"
            android:onClick="onStart"/>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Channel 1" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onChangeAngle"
            android:src="@android:drawable/arrow_down_float" />

        <EditText
            android:id="@+id/text_channel1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="50sp"
            android:inputType="number"
            android:text="" />

        <ImageButton
            android:id="@+id/imageButton_set1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:onClick="onSetChannel1"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onChangeAngle"
            android:src="@android:drawable/arrow_up_float" />
        <TextView
            android:id="@+id/textView2"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Channel 2" />
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onChangeAngle"
            android:src="@android:drawable/arrow_down_float" />
        <EditText
            android:id="@+id/text_channel2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="50sp"
            android:inputType="number"
            android:text="" />
        <ImageButton
            android:id="@+id/imageButton_set2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:onClick="onSetChannel2"
            android:src="@android:drawable/ic_media_play" />
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onChangeAngle"
            android:src="@android:drawable/arrow_up_float" />
    </LinearLayout>

