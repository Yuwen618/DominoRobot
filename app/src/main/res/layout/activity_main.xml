    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_tet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Test channel 1 off value" />
        <ImageButton
            android:id="@+id/imageButton_off_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onReduceOffValue"
            android:src="@android:drawable/arrow_down_float" />
        <EditText
            android:id="@+id/text_off_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="50sp"
            android:enabled="true"
            android:inputType="number"
            android:text="" />
        <ImageButton
            android:id="@+id/imageButton_off_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="onIncreaseOffValue"
            android:src="@android:drawable/arrow_up_float" />
    </LinearLayout>
</LinearLayout>